# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8
trim_trailing_whitespace = true

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 100

# JavaScript files
[*.{js,jsx,ts,tsx}]
indent_style = space
indent_size = 2
max_line_length = 100

# HTML files
[*.{html,htm}]
indent_style = space
indent_size = 2

# CSS files
[*.{css,scss,sass,less}]
indent_style = space
indent_size = 2

# JSON files
[*.{json,jsonc}]
indent_style = space
indent_size = 2

# YAML files
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = false
max_line_length = 80

# Docker files
[{Dockerfile,docker-compose.yml}]
indent_style = space
indent_size = 2

# Shell scripts
[*.sh]
indent_style = space
indent_size = 2
end_of_line = lf

# Makefile
[Makefile]
indent_style = tab

# Configuration files
[*.{ini,cfg,conf}]
indent_style = space
indent_size = 4

# Database files
[*.sql]
indent_style = space
indent_size = 2

# Documentation
[docs/**]
max_line_length = 80

# Git files
[.git*]
indent_style = space
indent_size = 2

# Requirements files
[requirements*.txt]
indent_style = space
indent_size = 2

# Django template files
[*.html]
indent_style = space
indent_size = 2

# Django migration files
[*/migrations/*.py]
indent_style = space
indent_size = 4

# Test files
[{test_*.py,tests.py,conftest.py}]
indent_style = space
indent_size = 4

# CI/CD configuration files
[.github/workflows/*.yml]
indent_style = space
indent_size = 2

# Environment files
[.env*]
indent_style = space
indent_size = 2

# Ignore binary files
[*.{png,jpg,jpeg,gif,ico,svg,woff,woff2,ttf,eot}]
charset = unset
end_of_line = unset
insert_final_newline = unset
trim_trailing_whitespace = unset
indent_style = unset
indent_size = unset