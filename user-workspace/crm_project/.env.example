# Django Settings
DJANGO_SETTINGS_MODULE=crm_project.settings_prod
SECRET_KEY=your-secret-key-here
DEBUG=False
ENVIRONMENT=production

# Database Configuration
DB_NAME=crm_db
DB_USER=crm_user
DB_PASSWORD=your-db-password
DB_HOST=your-db-host
DB_PORT=5432

# Redis Configuration
REDIS_URL=redis://your-redis-host:6379/0

# Celery Configuration
CELERY_BROKER_URL=redis://your-redis-host:6379/1
CELERY_RESULT_BACKEND=redis://your-redis-host:6379/2

# Email Configuration
EMAIL_HOST=smtp.your-email-provider.com
EMAIL_PORT=587
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-email-password
DEFAULT_FROM_EMAIL=noreply@example.com

# AWS S3 Configuration
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_STORAGE_BUCKET_NAME=your-bucket-name
AWS_S3_REGION_NAME=your-aws-region

# Domain Configuration
DOMAIN_NAME=your-domain.com
ALLOWED_HOST_1=www.your-domain.com
ALLOWED_HOST_2=api.your-domain.com

# CORS Configuration
CORS_ORIGIN_1=https://www.your-domain.com
CORS_ORIGIN_2=https://app.your-domain.com

# Sentry Configuration
SENTRY_DSN=your-sentry-dsn

# JWT Configuration
JWT_SECRET_KEY=your-jwt-secret-key
JWT_EXPIRATION_DELTA=86400

# Payment Gateway Configuration (if needed)
STRIPE_PUBLIC_KEY=your-stripe-public-key
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_WEBHOOK_SECRET=your-stripe-webhook-secret

# External Service API Keys
MAILCHIMP_API_KEY=your-mailchimp-api-key
MAILCHIMP_LIST_ID=your-mailchimp-list-id
SLACK_WEBHOOK_URL=your-slack-webhook-url

# Security Settings
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True

# Cache Settings
CACHE_TIMEOUT=300
CACHE_PREFIX=crm_cache

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE_PATH=/var/log/crm/app.log

# Feature Flags
ENABLE_MARKETING_FEATURES=True
ENABLE_SALES_FEATURES=True
ENABLE_SUPPORT_FEATURES=True
ENABLE_API_DOCUMENTATION=True

# Rate Limiting
API_RATE_LIMIT_ANON=100/day
API_RATE_LIMIT_USER=1000/day

# Monitoring
HEALTH_CHECK_URL=/health/
PROMETHEUS_ENABLED=True

# Background Tasks
MAX_RETRIES=3
RETRY_DELAY=300
TASK_TIMEOUT=3600

# File Upload Settings
MAX_UPLOAD_SIZE=10485760
ALLOWED_FILE_TYPES=.jpg,.jpeg,.png,.pdf,.doc,.docx,.xls,.xlsx

# Notification Settings
ENABLE_EMAIL_NOTIFICATIONS=True
ENABLE_SLACK_NOTIFICATIONS=True
ENABLE_SMS_NOTIFICATIONS=False

# Analytics
GOOGLE_ANALYTICS_ID=your-ga-id
MIXPANEL_TOKEN=your-mixpanel-token

# Development Tools (set to False in production)
ENABLE_DEBUG_TOOLBAR=False
ENABLE_DEBUG_LOGGING=False